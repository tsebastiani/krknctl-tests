cluster_shut_down_scenario:                          # Scenario to stop all the nodes for specified duration and restart the nodes
  runs: 1                                            # Number of times to execute the cluster_shut_down scenario
  shut_down_duration: $SHUTDOWN_DURATION            # duration in seconds to shut down the cluster
  cloud_type: $CLOUD_TYPE                            # cloud type on which Kubernetes/OpenShift runs
  timeout: $TIMEOUT                                  # Number of seconds to wait for each node to be stopped or running
